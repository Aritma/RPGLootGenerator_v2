#:kivy 2.0.0

FloatLayout:
    canvas.before:
        Color:
            rgb: 1, 1, 1

    JsonViewer:
        text: "[color=#FF0000]{}[/color]".format(self.text_value)
        color: (0.4, 1, 1, 1)
        background: (.3, .3, .3)
        pos_hint: {'x': 0, 'y': 0.9 }
        size_hint: None, None
        height: 30
        width: 250
        markup: True
